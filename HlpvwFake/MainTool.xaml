<UserControl x:Class="HlpvwFake.MainTool"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HlpvwFake"
             xmlns:fu="clr-namespace:ZHLX.FlatUI;assembly=ZHLX.FlatUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" >
        <Rectangle Margin="4, 2" Width="2" Fill="Gray" />
        <fu:FlatButton x:Name="manage" Content="Manage (F8)" Margin="4,0" Width="80" Click="Button_Click" Type="Default" MaxHeight="22" />
        <fu:FlatButton x:Name="save" Content="Save (F9)" Margin="4,0" Width="70" Click="Button_Click" Type="Default" MaxHeight="22" />
        <fu:FlatCheckBox x:Name="directSave" IsThreeState="False" Content="Direct save" VerticalAlignment="Center" Margin="4,0" Background="Transparent" />
    </StackPanel>
</UserControl>
